<% include ../partials/header%>

<div class='container'>
    <header class='jumbotron'>
        <div class='containter'>
        <h1><i class="glyphicon glyphicon-tent tent"></i>Welcome to Yelp Camp!</h1>
        <p id='test'>View our handpicked campgrounds from all over the world!</p>
        <p><a class='btn btn-primary btn-lg'  href="/campgrounds/new">Add New Campground</a></p>
        </div>
    </header>
    
<div class='row text-center' style="display: flex; flex-wrap: wrap;">
    <% camps.forEach(function(camp){ %>
        <div class='col-md-3 col-sm-6'>
            <div class="thumbnail">
                <img src="<%= camp.image%>" height="450px" width="600">
                <div class='caption'>
                     <h4><%= camp.name %></h4>
                </div>
                <p><a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a></p>
            </div>
        </div>
        <% }); %> 
            
</div>
</div>
<% include ../partials/footer%>